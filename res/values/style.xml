<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <color name="picalilly_bg">#DDEEB2</color>
    <color name="picalilly_divider">#000</color>
    <color name="picalilly_text_primary">#000</color>   
    <color name="picalilly_text_secondary">#000</color>     
    <color name="picalilly_text_tertiary">#000</color>   
    <color name="picalilly_hint_light">#000</color>     
    <color name="picalilly_hint_dark">#000</color>          
    
	<style name="Picalilly" parent="android:Theme.Light.NoTitleBar">
	    <item name="android:windowBackground">@color/picalilly_bg</item>
	    <item name="android:colorBackground">@color/picalilly_bg</item>
        <item name="android:colorForeground">#000</item>
        <item name="android:colorForegroundInverse">#000</item>
	    
	    <item name="android:textColorPrimary">@color/picalilly_text_primary</item>
	    <item name="android:textColorSecondary">@color/picalilly_text_secondary</item>
	    <item name="android:textColorTertiary">@color/picalilly_text_tertiary</item>
	    <item name="android:textColorPrimaryInverse">@color/picalilly_text_primary</item>
	    <item name="android:textColorSecondaryInverse">@color/picalilly_text_secondary</item>
	    <item name="android:textColorTertiaryInverse">@color/picalilly_text_tertiary</item>
	    
	    <item name="android:textColorPrimaryDisableOnly">#000</item>
        <item name="android:textColorPrimaryInverseDisableOnly">#000</item>
        <item name="android:textColorPrimaryNoDisable">#000</item>
        <item name="android:textColorSecondaryNoDisable">#000</item>
        <item name="android:textColorPrimaryInverseNoDisable">#000</item>
        <item name="android:textColorSecondaryInverseNoDisable">#000</item>
	    
        <item name="android:textColorHint">@color/picalilly_hint_light</item>
        <item name="android:textColorHintInverse">@color/picalilly_hint_dark</item>   
        <item name="android:textColorHighlight">#000</item>
        <item name="android:textColorLink">#000</item>
        
        <item name="android:divider">@color/picalilly_divider</item>
	</style>
    
    <style name="Red">
        <item name="android:background">#FF0000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="Icon">
        <item name="android:layout_width">@dimen/icon_medium</item>
        <item name="android:layout_height">@dimen/icon_medium</item>
    </style>
    
    <style name="Icon.Large">
        <item name="android:layout_width">@dimen/icon_large</item>
        <item name="android:layout_height">@dimen/icon_large</item>
    </style>
    
    <style name="Icon.XL">
        <item name="android:layout_width">@dimen/icon_xl</item>
        <item name="android:layout_height">@dimen/icon_xl</item>
    </style>
    
    <style name="HeaderText">
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">@dimen/header_text</item>
    </style>
    
    <style name="HeaderText.Small">
        <item name="android:textSize">@dimen/header_text_small</item>
    </style>
    
    <style name="HeaderText.Tiny">
        <item name="android:textSize">@dimen/header_text_tiny</item>
    </style>
    
    <style name="DialogHeaderText">
        <item name="android:textSize">@dimen/dialog_header_text</item>
        <item name="android:padding">5dp</item>
    </style>
    
        <style name="StatsText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:padding">12dp</item>
    </style>
    
        
    <style name="NavButton">
        <item name="android:background">@color/header_bg</item>
    </style>
</resources>