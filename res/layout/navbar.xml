<?xml version="1.0" encoding="utf-8"?>

<!--  
	In the class where this navbar is included,
	the last element should have a marginBottom of 50dp
	(if a Relative Layout is used).
-->

<TableLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:id="@+id/tableLayout1"  
    android:layout_width="fill_parent"  
    android:layout_height="match_parent"  
    android:shrinkColumns="*"  
    android:stretchColumns="*"
    android:background="#222"> 
    
    <TableRow  
        android:id="@+id/tableRow"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">  
        
	    <ImageView 
		    android:id="@+id/home"
		    android:contentDescription="@string/icon_unknown"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_menu_home" />
	    
	    <ImageView 
		    android:id="@+id/favourite"
		    android:contentDescription="@string/icon_unknown"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_menu_star" />
	    
	    <ImageView 
		    android:id="@+id/camera"
		    android:contentDescription="@string/icon_unknown"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_menu_camera" />
	    
	    <ImageView 
		    android:id="@+id/settings"
		    android:contentDescription="@string/icon_unknown"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/ic_menu_preferences" />
	</TableRow>
</TableLayout>