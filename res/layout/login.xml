<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView android:id="@+id/login_intro"
    	android:text = "@string/login_intro"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

    <TextView android:id="@+id/login_username_txt"
    	android:text="@string/login_username_txt"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/login_intro" />

    <EditText android:id="@+id/login_username"
        android:hint="@string/login_username"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
		android:layout_below="@+id/login_intro"
        android:layout_toRightOf="@+id/login_username_txt"
        android:singleLine="true" /> 

    <TextView android:id="@+id/login_password_txt"
    	android:text="@string/login_password_txt"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/login_username" />

    <EditText android:id="@+id/login_password"
        android:hint="@string/login_password"
  		android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
		android:layout_below="@+id/login_username"
        android:layout_toRightOf="@+id/login_password_txt"
        android:singleLine="true" /> 

	<Button android:id="@+id/login_button"
		android:text="@string/login_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/login_password"
		android:onClick="onClickLogin" />

    <TextView android:id="@+id/login_status"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/login_button" />
</RelativeLayout>