<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:paddingLeft="8dp"
         android:paddingRight="8dp">  

    <!-- HEADER -->
    
    <ImageView 
        android:id="@+id/groups_icon"
        android:src="@drawable/ic_unknown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:padding="4dp" />
    
    <TextView
    	android:id="@+id/groups_name"
    	android:text="@string/profile_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:layout_toRightOf="@id/groups_icon"
        android:textSize="20sp" />
         
     <!-- NAV BUTTONS -->
     
    <ImageView 
	    android:id="@+id/group_add"
	    android:contentDescription="@string/icon_unknown"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@+id/all_groups"
	    android:src="@drawable/ic_menu_add" />	    
	    
	<ImageView 
	    android:id="@+id/all_groups"
	    android:contentDescription="@string/icon_unknown"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:src="@drawable/ic_menu_groups" />
    
    <!-- GROUPS LIST -->
    
     <ListView android:id="@id/android:list"
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:drawSelectorOnTop="false"
         android:layout_below="@+id/groups_icon"
         android:layout_marginBottom="50dp" />

     <TextView android:id="@id/android:empty"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:text="@string/no_data"
         android:layout_below="@+id/groups_icon" /> 
         
     <include
         android:id="@+id/navbar"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         layout="@layout/navbar" />
          
</RelativeLayout>